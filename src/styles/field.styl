@require '_variables';

.pd-field
  label
    position relative
    display inline-block
    margin-bottom 5px
    color $color-grey-dark
    font-size $font-size-xxxs
    font-weight 600
    text-transform uppercase
  &.pd-field-required
    label
      &:after
        position absolute
        content '*'
        top -2px
        right -8px
        color var(--color-required-symbol)

.pd-field-asterisk
  position relative
  top -2px
  margin-left 2px
  color $color-red
